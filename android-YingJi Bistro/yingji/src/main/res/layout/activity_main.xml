<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.yanzhou.huang.yingji.MainActivity"
    android:background="@android:color/white"
>

    <Button
        android:text="Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:drawableLeft="@mipmap/ic_import_contacts_black_24dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:gravity="center"
        android:layout_below="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:backgroundTint="@color/rose" />

    <Button
        android:text="Social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:drawableLeft="@mipmap/ic_share_black_24dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:gravity="center"
        android:layout_below="@+id/aShop"
        android:layout_alignRight="@+id/aShop"
        android:layout_alignEnd="@+id/aShop"
        android:layout_alignLeft="@+id/aShop"
        android:layout_alignStart="@+id/aShop"
        android:backgroundTint="@color/rose" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/textView"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/orange"
        android:layout_height="match_parent"
        android:background="@drawable/yingji_logo"
        android:layout_marginBottom="204dp"
        android:layout_above="@+id/aShop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/shrimp_dumpling"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Start new order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aShop"
        android:drawableLeft="@mipmap/ic_restaurant_menu_black_24dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:gravity="center"
        android:backgroundTint="@color/rose"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
