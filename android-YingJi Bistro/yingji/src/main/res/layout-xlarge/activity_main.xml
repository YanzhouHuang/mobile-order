<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.yanzhou.huang.yingji.MainActivity"
>

    <TextView
        android:text="Welcome to YingJi Bistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/orange"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/shrimp_dumpling"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:drawableLeft="@mipmap/ic_import_contacts_black_24dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:gravity="center"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/aShop"
        android:layout_alignEnd="@+id/aShop"
        android:layout_alignLeft="@+id/aShop"
        android:layout_alignStart="@+id/aShop" />

    <Button
        android:text="Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:drawableLeft="@android:drawable/ic_menu_info_details"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:gravity="center"
        android:layout_below="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:text="Start new order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aShop"
        android:drawableLeft="@mipmap/ic_add_shopping_cart_black_24dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:gravity="center"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
